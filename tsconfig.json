{
   "compilerOptions": {
      "target": "es2017",
      "module": "commonjs",
      "lib": [
         "es5",
         "es6"
      ],
      "allowJs": true, 
      "moduleResolution": "node",
      "outDir": "./dist",
      "rootDir": "./src",
      "esModuleInterop": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "skipLibCheck": true, 
      "sourceMap": true,
      // "strictPropertyInitialization": false,
      "forceConsistentCasingInFileNames": true    
   }
}